# Use oh-my-zsh
export ZSH="~/.oh-my-zsh"
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Theming fix
export TERM=xterm-256color

# Use nvim as default system editor
export EDITOR=nvim

# Use Kitty as default system terminal
export TERMINAL=kitty

# Load NVM
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

# The next line updates PATH for the Google Cloud SDK.
# if [ -f '/Users/albingroen/Documents/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/albingroen/Documents/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
# if [ -f '/Users/albingroen/Documents/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/albingroen/Documents/google-cloud-sdk/completion.zsh.inc'; fi
#

export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'

export PATH="/home/kd/.local/bin:$PATH"

