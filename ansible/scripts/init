##########################################
# 2 - Playbooks to run
##########################################

# Anisble librarys
ansible-galaxy install gantsign.oh-my-zsh
ansible-galaxy collection install community.general
ansible-galaxy install gantsign.lazygit

# Base Install
ansible-playbook ~/dotfiles/ansible/playbooks/base_install.yml --ask-become-pass
ansible-playbook ~/dotfiles/ansible/playbooks/base_config.yml

# Rust Tools - fs, sd, bat, rg, neovim - Slow
ansible-playbook ~/dotfiles/ansible/playbooks/rust_install.yml --ask-become-pass

# Node
ansible-playbook ~/dotfiles/ansible/playbooks/nvm_install.yml

echo "Run the following commands to change dotfiles to ssh"
echo "gh auth login"
echo "cd ~/dotfiles" 
echo "git remote set-url origin git@github.com:julian-iaquinandi/dotfiles.git"
