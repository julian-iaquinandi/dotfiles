##########################################
# 2 - Playbooks to run
##########################################

default_DISTRO=ubuntu
DISTRO=${1:-$default_DISTRO}

# Anisble librarys
ansible-galaxy install gantsign.oh-my-zsh
ansible-galaxy collection install community.general
ansible-galaxy install gantsign.lazygit

# Base Install
ansible-playbook "~/dotfiles/ansible/playbooks/base/${DISTRO}_base_install.yml --ask-become-pass"
ansible-playbook ~/dotfiles/ansible/playbooks/base/base_config.yml

# Rust 
ansible-playbook ~/dotfiles/ansible/playbooks/langs/rust_install.yml --ask-become-pass
ansible-playbook ~/dotfiles/ansible/playbooks/apps/rust_terminal_apps_install.yml --ask-become-pass

# Node
ansible-playbook ~/dotfiles/ansible/playbooks/apps/nvm_install.yml

# Neovim
bob install stable

echo "Run the following commands to change dotfiles to ssh"
echo "gh auth login"
echo "cd ~/dotfiles" 
echo "git remote set-url origin git@github.com:julian-iaquinandi/dotfiles.git"
