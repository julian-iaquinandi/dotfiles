DEBIAN_FRONTEND=noninteractive
sed -i "s/#\$nrconf{kernelhints} = -1;/\$nrconf{kernelhints} = -1;/g" /etc/needrestart/needrestart.conf
apt update -y &&
apt upgrade -y &&
apt install -y python3 python3-pip git ansible

